{
  "name": "ts-mysql-parser",
  "version": "0.2.0",
  "description": "A standalone, grammar-complete MySQL parser.",
  "license": "MIT",
  "repository": "stevenmiller888/ts-mysql-parser",
  "author": "Steven Miller (https://github.com/stevenmiller888)",
  "engines": {
    "node": ">=12.13"
  },
  "type": "module",
  "keywords": [
    "typescript",
    "mysql-parser",
    "sql-parser",
    "parser",
    "mysql",
    "sql"
  ],
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "pub": "np",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "build-parser": "antlr4ts -Dlanguage=JavaScript -listener ./src/grammar/MySQLLexer.g4 ./src/grammar/MySQLParser.g4",
    "build": "npm run clean && rollup -c rollup.config.ts --configPlugin typescript",
    "watch": "tsc -b -w",
    "clean": "rm -rf dist",
    "prepare": "husky install"
  },
  "jest": {
    "preset": "ts-jest",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{yml,md,json}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "antlr4ts": "^0.5.0-alpha.4",
    "typescript": "^4.9.5"
  },
  "devDependencies": {
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.14.5",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "antlr4ts-cli": "^0.5.0-alpha.4",
    "esbuild": "^0.17.11",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.6.0",
    "husky": "^8.0.3",
    "jest": "^29.4.3",
    "lint-staged": "^13.1.2",
    "np": "^7.6.3",
    "prettier": "^2.8.4",
    "rollup": "^3.18.0",
    "rollup-plugin-esbuild": "^5.0.0",
    "rollup-plugin-polyfill-node": "^0.12.0",
    "ts-jest": "^29.0.5",
    "tsx": "^3.12.3"
  }
}
