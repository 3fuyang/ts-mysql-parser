{
  "name": "@fwio/ts-mysql-parser",
  "version": "0.0.4",
  "description": "A standalone, grammar-complete MySQL parser.",
  "license": "MIT",
  "repository": "3fuyang/ts-mysql-parser",
  "author": "Fwio (https://github.com/3fuyang)",
  "engines": {
    "node": ">=18.13"
  },
  "type": "module",
  "keywords": [
    "typescript",
    "mysql-parser",
    "sql-parser",
    "parser",
    "mysql",
    "sql"
  ],
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "pub": "np",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "build-parser": "antlr4ts -Dlanguage=JavaScript -listener ./src/grammar/MySQLLexer.g4 ./src/grammar/MySQLParser.g4",
    "build": "npm run clean && tsc --emitDeclarationOnly && tsx ./build",
    "watch": "tsc -b -w",
    "clean": "rm -rf dist",
    "prepare": "husky install"
  },
  "jest": {
    "preset": "ts-jest",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{yml,md,json}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "antlr4ts": "0.5.0-alpha.4",
    "assert": "^2.1.0",
    "call-bind": "^1.0.5",
    "inherits": "^2.0.4",
    "object-is": "^1.1.5",
    "object.assign": "^4.1.4",
    "process": "^0.11.10",
    "url": "^0.11.3",
    "util": "^0.12.5"
  },
  "devDependencies": {
    "@types/assert": "^1.5.9",
    "@types/jest": "^29.5.8",
    "@types/node": "^18.18.9",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "antlr4ts-cli": "0.5.0-alpha.4",
    "esbuild": "0.17.11",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^8.10.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^13.3.0",
    "np": "^7.7.0",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.1",
    "tsx": "^3.14.0",
    "typescript": "^4.9.5"
  }
}
